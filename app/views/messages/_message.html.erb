<% if user.id != message.user_id %>
  <div class="incoming_msg">
    <div class="incoming_msg_img">
      <% if message.user.profile_picture.attached? %>
        <%= image_tag url_for(message.user.profile_picture), class: "img-circle", style: "height: 50px"%>
      <% else %>
        <%= image_tag "avatar/user_default"%>
      <% end %>
    </div>
    <div class="received_msg">
      <div class="received_withd_msg">
        <p><%= message.body %></p>
        <span class="time_date"> <%= time_ago_in_words message.created_at %></span></div>
    </div>
  </div>
<% else %>
  <div class="outgoing_msg">
    <div class="sent_msg">
      <p><%= message.body %></p>
      <span class="time_date"> <%= time_ago_in_words message.created_at %></span> </div>
  </div>
<% end %>