<main>
  <div class="main-wrapper pt-80">
    <div class="container">

    <!-- Icon Cards-->
    <div class="row">
      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
          <div class="card-body">
            <div class="card-body-icon">
              <i class="fa fa-fw fa-comments"></i>
            </div>
            <div class="mr-5"><%= current_user.unread_messages_count %> New Messages!</div>
          </div>
          <a class="card-footer text-white clearfix small z-1" href="<%= messages_path %>">
            <span class="float-left">View Details</span>
            <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
          </a>
        </div>
      </div>
      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-warning o-hidden h-100">
          <div class="card-body">
            <div class="card-body-icon">
              <i class="fa fa-fw fa-list"></i>
            </div>
            <div class="mr-5"><%= current_user.inquiries.count %> Total Inquiries!</div>
          </div>
          <a class="card-footer text-white clearfix small z-1" href="<%= my_inquiries_user_path(id: current_user.id) %>">
            <span class="float-left">View Details</span>
            <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
          </a>
        </div>
      </div>
      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
          <div class="card-body">
            <div class="card-body-icon">
              <i class="fa fa-fw fa-shopping-cart"></i>
            </div>
            <div class="mr-5"><%= current_user.quotes.count %> Total Quotations!</div>
          </div>
          <a class="card-footer text-white clearfix small z-1" href="<%= my_inquiries_user_path(id: current_user.id) %>">
            <span class="float-left">View Details</span>
            <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
          </a>
        </div>
      </div>
      <div class="col-xl-3 col-sm-6 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
          <div class="card-body">
            <div class="card-body-icon">
              <i class="fa fa-fw fa-support"></i>
            </div>
            <div class="mr-5"><%= current_user.get_friend_users.count %> Total Friends!</div>
          </div>
          <a class="card-footer text-white clearfix small z-1" href="<%= users_path %>">
            <span class="float-left">View Details</span>
            <span class="float-right">
                <i class="fa fa-angle-right"></i>
              </span>
          </a>
        </div>
      </div>
    </div>
    <!-- Area Chart Example-->
    <div class="row">
      <div class="col-lg-6">
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-area-chart"></i> Inquiries Generated Per Month</div>
          <div class="card-body">
            <%= line_chart current_user.inquiries.group_by_month_of_year(:created_at).count, colors: ['#dc4734'] %>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-area-chart"></i> Quotations Received Per Month</div>
          <div class="card-body">
            <%= line_chart current_user.quotes_received.group_by_month_of_year(:created_at).count, colors: ['#dc4734'] %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <!-- Example Bar Chart Card-->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fa fa-bar-chart"></i> Network Analysis For The Past Year</div>
          <div class="card-body">
            <div class="row">
              <div class="col-sm-12 my-auto">
                <%= column_chart current_user.friendships.group_by_month_of_year(:created_at, format: "%b").count %>
              </div>
            </div>
          </div>
        </div>
      </div>
<!--      <div class="col-lg-4">-->
<!--        <div class="card mb-3">-->
<!--          <div class="card-header">-->
<!--            <i class="fa fa-pie-chart"></i> Pie Chart Example</div>-->
<!--          <div class="card-body">-->
            <%#= pie_chart current_user.conversations.group(:created_at).count %>
<!--          </div>-->
<!--          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>-->
<!--        </div>-->
<!--      </div>-->
    </div>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-table"></i> Last 10 Inquiries</div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr class="table-header">
              <th>Origin Location Type</th>
              <th>Origin Country</th>
              <th>Destination Location Type</th>
              <th>Destination Country</th>
              <th>Status</th>
              <th>Created Date</th>
              <th>Show</th>
              <th>Edit</th>
            </tr>
            </thead>
            <tbody>
            <% current_user.inquiries.last(10).each do |inquiry| %>
            <tr class="table-row">
              <td><%= inquiry.origin_location_type.split('_').map(&:capitalize).join(' ') %></td>
              <td><%= inquiry.origin_country %></td>
              <td><%= inquiry.destination_location_type.split('_').map(&:capitalize).join(' ') %></td>
              <td><%= inquiry.destination_country %></td>
              <td><span class="badge badge-status-<%= inquiry.status %>"><%= inquiry.status.split('_').map(&:capitalize).join(' ') %></span></td>
              <td><%=  time_ago_in_words inquiry.created_at %></td>
              <td><span class="label label-success"><%= link_to "".html_safe, inquiry_path(inquiry), class:"inquiry-manage-option fa fa-eye" %> Show</span></td>
              <td><span class="label label-warning"><%= link_to "".html_safe, edit_inquiry_path(inquiry), class:"inquiry-manage-option fa fa-edit" %> Edit</span></td>
            </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</main>
