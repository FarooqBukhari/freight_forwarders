<div class="signup-form-wrapper personal-form-wrapper">
  <div class="signup-inner text-center">
    <h3 class="title">Account Information</h3>
    <%= simple_form_for(user, url: registration_path(user), html: { method: :put, class: "signup-inner--form" }) do |f| %>
      <div class="row">
        <div class="col-12">
          <%= f.input :email, as: :email, input_html: {autofocus: true, autocomplete: "email", class:"single-field", placeholder: "Email", disabled: true} %>
        </div>
        <div class="col-12">
          <%= f.input :password, as: :password, input_html: {autocomplete: "new-password", class:"single-field", placeholder: "New Password"} %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <div class="col-12">
          <%= f.input :password_confirmation, as: :password, input_html: {autocomplete: "new-password", class:"single-field", placeholder: "Confirm New Password"} %>
        </div>
        <div class="col-12">
          <%= f.input :current_password, as: :password, input_html: {autocomplete: "current-password", class:"single-field", placeholder: "Current Password"} %>
        </div>
        <div class="col-12 mb-5">
          <%= f.button :submit, "Update", class: "submit-btn" %>
        </div>
        <div class="col-12">
          <p><strong class="goods-ready-dates-bold">Unhappy?</strong> Do you want to cancel your account</p>
          <span class="terms-condition">
          <%= link_to "Cancel my account", registration_path(user), data: { confirm: "Are you sure?" }, method: :delete  %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>
