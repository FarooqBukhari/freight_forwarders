<main>
  <div class="main-wrapper">
    <div class="profile-banner-large bg-img" data-bg="<%= show_attachment(@user.cover_photo, 'avatar/cover_default') %>">
    </div>
    <div class="profile-menu-area bg-white">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-3 col-md-3">
            <div class="profile-picture-box">
              <figure class="profile-picture">
                <a href="#">
                  <img src="<%= show_attachment(@user.profile_picture, 'avatar/user_default') %>" alt="profile picture">
                </a>
              </figure>
            </div>
          </div>
          <div class="col-lg-6 col-md-6 offset-lg-1">
            <div class="profile-menu-wrapper">
              <div class="main-menu-inner header-top-navigation">
                <nav>
                  <ul class="main-menu">
                    <li class="active"><a href="#">timeline</a></li>
                    <li><a href="<%= friends_user_path(id: @user.id) %>">friends</a></li>
                    <!--                    <li class="d-inline-block d-md-none"><a href="#">edit profile</a></li>-->
                  </ul>
                </nav>
              </div>
            </div>
          </div>
          <div class="col-lg-2 col-md-3 d-none d-md-block">
            <div class="profile-edit-panel">
              <% if @user == current_user %>
                <a class="edit-btn" style="color: white;" href="<%= edit_user_path(id: @user) %>">edit profile</a>
              <% elsif @is_friend %>
                <%= link_to 'Remove Friend', remove_friend_path({id: @user.id}), class: 'edit-btn', method: :post, style: "color: white;" %>
              <% elsif @can_remove %>
                <%= link_to 'Cancel Request', cancel_request_path({id: @user.id}), class: 'edit-btn', method: :post, style: "color: white;" %>
              <% elsif @can_accept %>
                <div class="row">
                  <%= link_to 'Accept', add_friend_path(id: @user.id), method: :post, class: "btn btn-primary col-md-5", style: "background-color: powderblue"  %>
                  <div class="col-md-1"></div>
                  <%= link_to 'Reject', reject_friend_path(id: @user.id), method: :post, class: "btn btn-primary col-md-5",  style: "background-color: orangered"  %>
                </div>
              <% elsif @can_add %>
                <%= link_to 'Add to Network', friends_path({id: @user.id}), class: 'edit-btn', method: :post, style: "color: white;" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <aside class="widget-area profile-sidebar">
            <!-- widget single item start -->
            <div class="card widget-item">
              <h4 class="widget-title"> <%= @user.name %>
                <% if @user !=  current_user %>
                  <%= link_to "<i class='fa fa-comment'></i>".html_safe ,conversations_path(user_id: @user.id, con_type: "User"), method: :post, class: "btn btn-blue" %>
                <% end %>
              </h4>
              <div class="widget-body">
                <div class="about-author">
                  <p>I Donâ€™t know how? But i believe that it is possible one day if i stay with my dream all time</p>
                  <ul class="author-into-list">
                    <li><a href="#"><i class="bi bi-office-bag"></i><%=current_user.job_title%></a></li>
                    <li><a href="#"><i class="bi bi-home"></i><%=current_user.phone%></a></li>
                  </ul>
                </div>
              </div>
            </div>
          </aside>
        </div>

        <div class="col-md-9">
          <!-- share box start -->
          <% if @user == current_user %>
            <%= render 'users/inquiry_section' %>
          <% end %>
          <!-- share box end -->
          <!-- post status start -->
          <%= render 'inquiries/inquiries', inquiries: @inquiries %>
          <!-- post status end -->
        </div>
      </div>
    </div>
  </div>
</main>
