<main>
  <div class="main-wrapper pt-80">
    <div class="container">
      <div class="row">
        <div class="col-lg-3 order-1 order-lg-1">
          <aside class="widget-area">
            <!-- widget single item start -->
            <div class="card card-profile widget-item p-0">
              <div class="profile-banner">
                <figure class="profile-banner-small">
                  <a href="#">
                    <img src="<%= show_attachment(current_user.cover_photo, 'banner-small') %>" alt="">
                  </a>
                  <a href="#" class="profile-thumb-2">
                    <img src="<%= show_attachment(current_user.profile_picture, 'avatar/user_default') %>" alt="">
                  </a>
                </figure>
                <div class="profile-desc text-center">
                  <h5 class="author"><a href="#"><%= current_user.name %></a></h5>
                  <p><strong class="goods-ready-dates-bold"><%=current_user.job_title%></strong></p>
                  <span><%=current_user.phone%></span>
                </div>
              </div>
            </div>
            <!-- widget single item start -->

            <!-- widget single item start -->
            <div class="card widget-item">
              <h4 class="widget-title" >People you may know</h4>
              <div class="widget-body">
                <ul class="like-page-list-wrapper">
                  <% @recommendations.each do |user| %>
                  <li class="unorder-list">
                    <!-- profile picture end -->
                    <div class="profile-thumb">
                      <a href="#">
                        <figure class="profile-thumb-small">
                          <img src="<%= show_attachment(user.profile_picture, 'avatar/user_default') %>" alt="profile picture">
                        </figure>
                      </a>
                    </div>
                    <!-- profile picture end -->

                    <div class="unorder-list-info">
                      <h3 class="list-title"><a href="<%= user_path(user.id) %>"><%= user.name %></a></h3>
                      <p class="list-subtitle"><a> <i class="fa fa-address-card" aria-hidden="true"></i> <%= user.job_title %></a></p>
                    </div>
                    <button class="like-button active">
                      <img class="heart" src="<%= asset_path 'heart.png' %>" alt="">
                      <img class="heart-color" src="<%= asset_path 'heart-color.png' %>" alt="">
                    </button>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>
            <!-- widget single item end -->

          </aside>
        </div>

        <div class="col-lg-6 order-2 order-lg-2">
          <div class="row">
          <% @users.each do |user| %>
          <div class="card col-md-6 col-sm-12 friend-cards" style="padding: 15px 30px 0px 30px">
            <div class="post-title d-flex align-items-center">
              <!-- profile picture end -->
              <div class="profile-thumb justify-content-center">
                <a href="#">
                  <figure class="profile-thumb-large" style="margin-left: 10px;">
                    <img src="<%= show_attachment(user.profile_picture, 'avatar/user_default') %>" alt="profile picture">
                  </figure>
                </a>
                <div class="d-flex flex-row">
                  <div class="d-flex">
                    <% if current_user.isFriend(user).exists? %>
                      <%= link_to "<i class='fa fa-minus'></i>".html_safe ,reject_friend_path(id: user.id), method: :post, class: "btn btn-blue highlighter" %>
                    <% else %>
                      <%= link_to "<i class='fa fa-plus'></i>".html_safe ,friends_path(id: user.id), method: :post, class: "btn btn-blue highlighter" %>
                    <% end %>

                      <hr>
                      <%= link_to "<i class='fa fa-comments'></i>".html_safe ,conversations_path(user_id: user.id, con_type: "User"), method: :post, class: "btn btn-blue highlighter" %>
                  </div>
                </div>
              </div>
              <!-- profile picture end -->
              <div class="posted-author" style="margin-top: -35px;">
                <h5 class="author"><a href="<%= user_path(user.id) %>"><%= user.name %></a></h5>
                <% if check_attribute_presence(user.website) %>
                  <span class="post-time"><i class="fa fa-link" aria-hidden="true"></i><a href="<%= user.website %>"> Visit Website</a></span>
                <% end %>
                <% if check_attribute_presence(user.job_title) %>
                  <span class="post-time"><i class="fa fa-address-card" aria-hidden="true"></i> <%= user.job_title %></span>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
          </div>

          <div class="row">
            <div class="col-3"></div>
            <div class="col-6" style="display: <%= @users.count > 0 ? 'block' : 'none' %>"> <%== pagy_bootstrap_nav(@pagy) %> </div>
          </div>

        </div>

        <%# if @requested_users.any? %>
          <div class="col-lg-3 order-3">
              <aside class="widget-area">
                <!-- widget single item start -->
                <div class="card widget-item">
                  <h4 class="widget-title">Network Requests (<%= @requested_users.count %>)</h4>
                  <div class="widget-body">
                    <ul class="like-page-list-wrapper">
                      <% @requested_users.each do |request| %>
                        <li class="unorder-list">
                          <!-- profile picture end -->
                          <div class="profile-thumb">
                            <a href="#">
                              <figure class="profile-thumb-small">
                                <img src="<%= show_attachment(request.requester.profile_picture, 'avatar/user_default') %>" alt="profile picture">
                              </figure>
                            </a>
                          </div>
                          <!-- profile picture end -->

                          <div class="unorder-list-info">
                            <h3 class="list-title"><a href="#"><strong><a href="<%= user_path(request.requester.id) %>"><%= request.requester.name %></a> </strong> requested to join your network</a></h3>
                            <p class="list-subtitle"><%= time_ago_in_words( request.created_at) %> ago</p>
                            <div class="row">
                              <%= link_to 'Accept', add_friend_path(id: request.requester.id), method: :post, class: "btn btn-primary col-md-5"  %>
                              <div class="col-md-1"></div>
                              <%= link_to 'Reject', reject_friend_path(id: request.requester.id), method: :post, class: "btn btn-primary col-md-5",  style: "background-color: orangered"  %>
                            </div>
                          </div>
                        </li>
                      <% end %>
                    </ul>
                  </div>
                </div>
                <!-- widget single item end -->

              </aside>
            </div>
        <%# end %>
      </div>
    </div>
  </div>

</main>
