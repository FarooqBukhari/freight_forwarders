<div class="site">
    <div class="profile-card__final">

        <div class="pc-user">
            <div class="pc-user-image">
                <a href="<%=user_path(user) %>" target="_blank">
                    <% if user.profile_picture.present?%>
                      <img src="<%= show_attachment(user.profile_picture, 'avatar/user_default')%>" style="border-radius: 40%; height: 90px; width: 110px;">
                    <% else %>
                      <a style="cursor: pointer" href="<%= user_path(user) %>"><img class="img-fluid card_image" src="http://placehold.it/110x110/336699/fff?text=<%= user.initials %>" alt="card image" style="border-radius: 50%;width: 110px;height: 110px;box-shadow: 5px 5px 20px rgba(0,0,0,0.5);"></a>
                    <% end %>
                </a>
            </div>
            <div class="pc-user-info">
                <h3><a href="<%= user_path(user)%>" target="_blank"><%= user.name.titleize%></a></h3>
                <div class="pc-user-title">
                    <% if check_attribute_presence(user.job_title) %>
                      <a class="card__text__minor"> <i class="fa fa-address-card" aria-hidden="true" style="color: #6c6577"></i><%= user.job_title.titleize%></a>
                      
                    <% else %>
                      <a class="card__text__minor" style="color: #e8e8e8;"><i class="fa fa-address-card" style="color: #6c6577" aria-hidden="true"></i>N/A</a>
                    <% end %>
                </div>

                <div class="pc-user-title">
                    <% if check_attribute_presence(user.company_name) %>
                      <a class="card__text__minor"> <i class="fa fa-building" style="color: #6c6577" aria-hidden="true"></i><%= user.company_name.titleize%></a>
                    <% else %>
                      <a class="card__text__minor"> <i class="fa fa-building" style="color: #6c6577" aria-hidden="true"></i>N/A</a>
